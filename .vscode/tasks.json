{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Backend Server",
			"type": "shell",
			"command": "npm start",
			"group": "build",
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}/server"
			}
		},
		{
			"label": "Start Frontend Client",
			"type": "shell",
			"command": "npm run dev",
			"group": "build",
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}/client"
			}
		}
	]
}